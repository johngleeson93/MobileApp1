package org.wit.landmark.activities

import android.content.Intent
import androidx.appcompat.app.AppCompatActivity
import android.os.Bundle
import android.view.Menu
import android.view.MenuItem
import androidx.recyclerview.widget.LinearLayoutManager
import landmark.R
import org.wit.landmark.adapters.LandmarkAdapter
import org.wit.landmark.databinding.ActivityLandmarkListBinding
import org.wit.landmark.main.mainApp

class LandmarkList : AppCompatActivity() {

    lateinit var app: LandmarkApp
    lateinit var reportLayout : ActivityLandmarkListBinding

    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        landmarkListLayout = ActivityLandmarkListBinding.inflate(layoutInflater)
        setContentView(landmarkListLayout.root)

        app = this.application as LandmarkApp
        landmarkListLayout.recyclerView.layoutManager = LinearLayoutManager(this)
        landmarkListLayout.recyclerView.adapter = LandmarkAdapter(app.LandmarkStore.findAll())
    }

    override fun onCreateOptionsMenu(menu: Menu): Boolean {
        // Inflate the menu; this adds items to the action bar if it is present.
        menuInflater.inflate(R.menu.menu_landmarkList, menu)
        return true
    }

    override fun onOptionsItemSelected(item: MenuItem): Boolean {
        // Handle action bar item clicks here. The action bar will
        // automatically handle clicks on the Home/Up button, so long
        // as you specify a parent activity in AndroidManifest.xml.
        return when (item.itemId) {
            R.id.action_save -> { startActivity(
                Intent(this,
                    Save::class.java)
            )
                true
            }
            else -> super.onOptionsItemSelected(item)
        }
    }
}